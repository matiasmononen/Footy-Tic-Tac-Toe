<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".navigation.MainActivity">

    <ImageView
        android:id="@+id/ivHeart3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pheart"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeart1"
        app:layout_constraintStart_toEndOf="@+id/ivHeart2" />

    <ImageView
        android:id="@+id/ivHeart2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pheart"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeart1"
        app:layout_constraintEnd_toEndOf="@+id/btnApply"
        app:layout_constraintStart_toStartOf="@+id/btnApply" />

    <FrameLayout
        android:id="@+id/fl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/fl2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGuessHere">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="149dp"
            android:layout_height="132dp"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btnLogo1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pbadge"
            android:padding="16dp"
            android:tint="@null" />

        <TextView
            android:id="@+id/tvPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ptrophy"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fl1"
        app:layout_constraintTop_toTopOf="@+id/fl1">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="149dp"
            android:layout_height="132dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnLogo2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pbadge"
            android:padding="16dp"
            android:tint="@null" />

        <TextView
            android:id="@+id/tvPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ptrophy"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/fl4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="149dp"
            android:layout_height="132dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnLogo3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pbadge"
            android:padding="16dp"
            android:tint="@null" />

        <TextView
            android:id="@+id/tvPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ptrophy"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fl3"
        app:layout_constraintTop_toTopOf="@+id/fl3">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="149dp"
            android:layout_height="132dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnLogo4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pbadge"
            android:padding="16dp"
            android:tint="@null" />

        <TextView
            android:id="@+id/tvPrice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ptrophy"
            android:layout_gravity="bottom|start"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the teammate!"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etGuessHere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fl3"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/fl1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvAnswer"
        app:layout_constraintEnd_toEndOf="@+id/fl3"
        app:layout_constraintStart_toStartOf="@+id/fl3"
        app:layout_constraintTop_toBottomOf="@+id/fl3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fl4"
        app:layout_constraintStart_toStartOf="@+id/fl4"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <AutoCompleteTextView
        android:id="@+id/etGuessHere"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Search Here!"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/fl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <FrameLayout
        android:id="@+id/flCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/flClub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flClub"
        app:layout_constraintTop_toTopOf="@+id/flClub">
    <Button
        android:id="@+id/btnCountry"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="@drawable/pflag"
        app:layout_constraintBottom_toBottomOf="@+id/flClub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flClub"
        app:layout_constraintTop_toTopOf="@+id/flClub" />
        <ImageView
            android:id="@+id/ivCountry"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="5dp"
            android:src="@drawable/ptrophy"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:elevation="5dp"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="5"/>
    </FrameLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHeart2" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUESS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:text="GIVE UP"
        android:theme="@style/RoundedButton"
        app:layout_constraintBottom_toBottomOf="@+id/btnApply"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivHeart1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/pheart"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnApply"
        app:layout_constraintEnd_toStartOf="@+id/ivHeart2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnQuit" />
    <FrameLayout
        android:id="@id/flClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ivHeart1"
        app:layout_constraintEnd_toStartOf="@+id/flCountry"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">
    <Button
        android:id="@+id/btnClub"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/pbadge" />
        <ImageView
            android:id="@+id/ivClub"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ptrophy"/>
        <TextView
            android:id="@+id/tvClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="30sp"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/flClub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/etGuessHere" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ptrophy" />

    <TextView
        android:id="@+id/tvTrophies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>