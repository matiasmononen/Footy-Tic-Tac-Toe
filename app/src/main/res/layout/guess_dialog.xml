<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_green">

        <TextView
            android:id="@+id/closer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivHorizontalGuess"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pbadgest"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivVerticalGuess"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pbadgest"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search Here!"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvSboob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name a player who ..."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has played for Manchester United and Arsenal"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and is canadian"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnMakeGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="GUESS!"
            android:layout_gravity="center"/>

    </LinearLayout>
</RelativeLayout>